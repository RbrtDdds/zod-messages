{
  "compilerOptions": {
    "lib": ["es5", "es6", "es7", "esnext", "dom"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["src/**/*"],
  "paths": {
    "@/*": ["./*"]
  }
}
